<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/app_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="135dp"
            android:layout_height="123dp"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:maxHeight="400dp"
            android:layout_margin="30dp"
            android:src="@mipmap/find_friend" />


        <EditText
            android:layout_marginTop="100dp"
            android:id="@+id/display_name_signup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/background"
            android:background="@color/black"
            android:hint="Display name" />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/username_signup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/background"
            android:background="@color/black"
            android:hint="username" />
        <EditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:textColor="@color/background"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:hint="Password" />
        <EditText
            android:id="@+id/password_again_signup"
            android:layout_width="match_parent"
            android:textColor="@color/background"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:hint="Password again" />
        <EditText
            android:id="@+id/phone_signup"
            android:layout_width="match_parent"
            android:textColor="@color/background"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:layout_height="30dp"
            android:inputType="phone"
            android:hint="Phone number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logger_signup"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/submit_login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:text="Sign up"/>

    </LinearLayout>
</RelativeLayout>